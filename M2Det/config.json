{
    "name": "M2Det",
    "n_gpu": 1,

    "arch": {
        "type": "M2Det",
        "args": {}
    },
    "data_loader": {
        "type": "BDDDataLoader",
        "args":{
            "image_dir": "data/bdd100k/train",
            "label_dir": "data/bdd100k/labels",
            "label": "bdd100k_labels_images_train.json",
            "batch_size": 8,
            "shuffle": false,
            "validation_split": 0.0,
            "num_workers": 2
        }
    },
    "optimizer": {
        "module": "model.optimizer",
        "type": "Ranger",
        "args":{
        }
    },
    "loss": "nll_loss",
    "metrics": [
        "accuracy", "top_k_acc"
    ],
    "lr_scheduler": {
        "type": "CosineAnnealingLR",
        "args": {
            "T_max": 1,
            "eta_min": 0
        }
    },
    "trainer": {
        "epochs": 100,
        "save_dir": "saved/",
        "save_period": 1,
        "verbosity": 2,
        "monitor": "min val_loss",
        "early_stop": 50
    }
}
